<Window x:Class="Mangaka_Studio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mangaka_Studio.Controls"
        mc:Ignorable="d"
        Title="Mangaka Studio" Height="540" Width="960" 
        WindowState="Maximized">
    <DockPanel>
        <StackPanel Style="{StaticResource MenuPanel}" DockPanel.Dock="Top">
            <Menu>
                <MenuItem Header="Файл">
                    <MenuItem Header="Открыть"></MenuItem>
                    <MenuItem Header="Сохранить"></MenuItem>
                </MenuItem>
                <MenuItem Header="Правка">
                    <MenuItem Header="Назад"></MenuItem>
                    <MenuItem Header="Вперед"></MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>
        <WrapPanel DockPanel.Dock="Top">
            <local:IconButton IconSource="Resources\icons8-кисть.png">Кисть</local:IconButton>
            <local:IconButton IconSource="Resources\icons8-карандаш.png">Карандаш</local:IconButton>
            <local:IconButton IconSource="Resources\icons8-ручка.png">Ручка</local:IconButton>
            <local:IconButton IconSource="Resources\icons8-ластик.png">Ластик</local:IconButton>
        </WrapPanel>
        <StackPanel DockPanel.Dock="Left" Width="100">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
            </Grid>
        </StackPanel>
        <Grid Background="Gray">
            <Canvas x:Name="MainDrawing" Background="White" Cursor="Cross" Panel.ZIndex="0"></Canvas>
        </Grid>
    </DockPanel>
    
</Window>
